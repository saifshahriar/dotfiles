set completion-highlight-bg "#d5c4a1"
set completion-highlight-fg "#1d2021"

set recolor-lightcolor "#1d2021"
set recolor-darkcolor "#d5c4a1"
set default-bg "#1d2021"

set inputbar-bg "#1d2021"
set inputbar-fg "#d5c4a1"
set notification-bg "#1d2021"
set notification-fg "#d5c4a1"
set notification-error-bg "#fb4934"
set notification-error-fg "#d5c4a1"
set notification-warning-bg "#fb4934"
set notification-warning-fg "#d5c4a1"
